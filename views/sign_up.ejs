<style>
  .gradient-custom {
    background: rgb(238, 174, 202);
    background: radial-gradient(
      circle,
      rgba(238, 174, 202, 1) 0%,
      rgba(148, 185, 233, 1) 47%
    );
  }
  .card-style {
    background: rgb(98, 50, 85);
    background: radial-gradient(
      circle,
      rgba(98, 50, 85, 1) 0%,
      rgba(79, 49, 60, 1) 54%
    );
  }
</style>
<section class="vh-100 modal-fullscreen-lg-down gradient-custom">
  <div class="container py-3 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card card-style text-white" style="border-radius: 1rem">
          <div class="card-body p-3 text-center">
            <div class="mb-md-2 mt-md-2 pb-3">
              <h2 class="fw-bold mb-2 text-uppercase">Sign Up</h2>
              <p class="text-white-50 mb-3">Please enter your details!</p>

              <form action="/create" method="post">
                <div class="form-check-inline form-white mb-3">
                  <label class="form-label fw-bold" for="typeNameX">Name</label>
                  <input
                    type="text"
                    id="typeNameX"
                    required
                    name="name"
                    class="form-control form-control-lg"
                  />
                </div>

                <div class="form-check-inline form-white mb-3">
                  <label class="form-label fw-bold" for="typeEmailX"
                    >Email</label
                  >
                  <input
                    type="email"
                    id="typeEmailX"
                    required
                    name="email"
                    class="form-control form-control-lg"
                  />
                </div>

                <div class="form-check-inline form-white mb-3">
                  <label class="form-label fw-bold" for="typePasswordX"
                    >Password</label
                  >
                  <input
                    type="password"
                    id="typePasswordX"
                    required
                    name="password"
                    class="form-control form-control-lg"
                  />
                </div>

                <div class="form-check-inline form-white mb-4">
                  <label class="form-label fw-bold" for="typeConfirmPassX"
                    >Confirm Password</label
                  >
                  <input
                    type="password"
                    id="typeConfirmPassX"
                    required
                    name="confirm_password"
                    class="form-control form-control-lg"
                  />
                </div>

                <button class="btn btn-outline-light btn-lg px-5" type="submit">
                  Sign Up
                </button>
              </form>

              <div>
                <p class="mt-4">Or Sign In using social accounts</p>
              </div>

              <div class="d-flex justify-content-center text-center mt-2 pt-1">
                <a href="/auth/google" class="text-white"
                  ><i class="fab fa-google fa-lg"></i
                ></a>
                <a href="#!" class="text-white"
                  ><i class="fab fa-twitter fa-lg mx-4 px-2"></i
                ></a>
                <a href="#!" class="text-white"
                  ><i class="fab fa-facebook-f fa-lg"></i
                ></a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
