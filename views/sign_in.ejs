<style>
  .gradient-custom {
    background: rgb(238, 174, 202);
    background: radial-gradient(
      circle,
      rgba(238, 174, 202, 1) 0%,
      rgba(148, 185, 233, 1) 47%
    );
  }
  .card-style {
    background: rgb(98,50,85);
background: radial-gradient(circle, rgba(98,50,85,1) 0%, rgba(79,49,60,1) 54%);
  }
</style>

<section class="modal-fullscreen-lg-down gradient-custom">
  <div class="container py-3 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card card-style text-white" style="border-radius: 1rem">
          <div class="card-body p-5 text-center">
            <div class="mb-md-1 mt-md-1 pb-3">
              <h2 class="fw-bold mb-2 text-uppercase">Sign In</h2>
              <p class="text-white-50 mb-4">
                Please enter your login and password!
              </p>

              <form action="/create-session" method="post">
                <div class="form-check-inline form-white mb-4">
                  <label class="form-label fw-bold" for="typeEmailX"
                    >Email</label
                  >
                  <input
                    type="email"
                    name="email"
                    required
                    id="typeEmailX"
                    class="form-control form-control-lg"
                  />
                </div>

                <div class="form-check-inline form-white mb-4">
                  <label class="form-label fw-bold" for="typePasswordX"
                    >Password</label
                  >
                  <input
                    type="password"
                    name="password"
                    required
                    id="typePasswordX"
                    class="form-control form-control-lg"
                  />
                </div>

                <p class="small mb-3 pb-lg-2">
                  <a class="text-white-50" href="#!">Forgot password?</a>
                </p>

                <button class="btn btn-outline-light btn-lg px-5" type="submit">
                  Login
                </button>
              </form>

              <div>
                <p class="mt-4">Or Sign In using social accounts</p>
              </div>

              <div class="d-flex justify-content-center text-center mt-4 pt-1">
                <a href="/auth/google" class="text-white"
                  ><i class="fab fa-google fa-lg"></i
                ></a>
                <a href="#!" class="text-white"
                  ><i class="fab fa-twitter fa-lg mx-4 px-2"></i
                ></a>
                <a href="#!" class="text-white"
                  ><i class="fab fa-facebook-f fa-lg"></i
                ></a>
              </div>
            </div>

            <div>
              <p class="mb-0">
                Don't have an account?
                <a href="/sign-up" class="text-white-50 fw-bold">Sign Up</a>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
